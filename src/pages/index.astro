---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION, COMPANY_NAME, COMPANY_TAGLINE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<!-- Hero Section -->
			<section class="bg-gradient-to-br from-blue-600 via-blue-700 to-indigo-800 text-white py-20 px-6 rounded-lg mb-16">
				<div class="max-w-4xl mx-auto text-center">
					<h1 class="text-5xl md:text-6xl font-bold mb-6 leading-tight">
						Find Your Next
						<span class="text-blue-200">Tech Superstar</span>
					</h1>
					<p class="text-xl md:text-2xl mb-8 text-blue-100 max-w-3xl mx-auto">
						{COMPANY_TAGLINE} - Specialized IT recruitment connecting exceptional talent with innovative companies.
					</p>
					<div class="flex flex-col md:flex-row gap-4 justify-center">
						<a href="/contact" class="bg-white text-blue-700 hover:bg-blue-50 font-bold py-4 px-8 rounded-lg transition-colors text-lg">
							Hire Talent
						</a>
						<a href="/jobs" class="border-2 border-white text-white hover:bg-white hover:text-blue-700 font-bold py-4 px-8 rounded-lg transition-colors text-lg">
							Find Jobs
						</a>
					</div>
				</div>
			</section>

			<!-- Services Section -->
			<section class="mb-16">
				<div class="text-center mb-12">
					<h2 class="text-4xl font-bold text-gray-800 mb-4">Our Specialties</h2>
					<p class="text-xl text-gray-600 max-w-2xl mx-auto">
						We focus exclusively on IT roles, understanding the nuances of each technology stack and role.
					</p>
				</div>
				
				<div class="grid md:grid-cols-3 gap-8 mb-12">
